<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd"
>
    <parameter name="artifactEventId" required="true"/>

    <transition name="viewArtifact">
        <default-response url="."/>
    </transition>

    <actions>
        <entity-find-one entity-name="co.hotwax.alc.ArtifactLogIndex" value-field="artifactLogIndex"/>
        <if condition="!artifactLogIndex">
            <return message="Artifact Log ${artifactEventId} is not found"/>
        </if>
        <set field="artifactLogId" from="artifactLogIndex.artifactLogId"/>
        <service-call name="co.hotwax.alc.SearchService.search#ArtifactLogIndexes" out-map="context" in-map="[queryString:artifactLogId,pageIndex:pageIndex, pageSize:pageSize, pageNoLimit:pageNoLimit]"/>
    </actions>
    <widgets>
        <label text="View Artifact Event Page" type="h3"/>
        <container-row>
            <row-col lg="6" sm="12">
                <container-box>
                    <box-header title="Artifact ${artifactLogIndex.artifactEventId} Details"/>
                    <box-body>
                        <form-single name="ViewArtifactEvent" map="artifactLogIndex">
                            <auto-fields-entity entity-name="co.hotwax.alc.ArtifactLogIndex" include="nonpk"
                                                field-type="display"/>
                            <field name="content">
                                <default-field>
                                    <text-area rows="10" read-only="true"/>
                                </default-field>
                            </field>
                        </form-single>
                    </box-body>
                </container-box>
            </row-col>
            <row-col lg="6" sm="12">
                <container-box>
                    <box-header title="Life Cycle"/>
                    <box-body></box-body>
                </container-box>
            </row-col>
        </container-row>
        <container-row>
            <row-col sm="12">
                <container-box>
                    <box-header title="Related Artifact Log Events"/>
                    <box-body>
                        <form-list name="ArtifactLogIndexList" list="documentList" paginate="true" paginate-always-show="true" skip-form="true" show-page-size="true">
                            <field name="artifactEventId">
                                <default-field>
                                    <link url="viewArtifact" text="${artifactEventId}"/>
                                </default-field>
                            </field>
                            <field name="artifactLogId"><default-field>
                                <display/>
                            </default-field></field>
                        </form-list>
                    </box-body>
                </container-box>
            </row-col>
        </container-row>
    </widgets>
</screen>